<div class="container my-5" style="color:#ffffff;">
    <div class="row">
        <div class="col-12">

            <h1 class="text-center my-4"><i class="fa fa-clock-o" aria-hidden="true"></i> Last Min Gig Form <i class="fa fa-check-square-o" aria-hidden="true"></i></h1>
            
            <h3 class="text-center my-2">Please fill out this form to post the skills you want to market.</h3>

            <!--start of form-->
            <form id="gig-form">

                <div class="row">
                    <!--name-->
                    <div class="col-lg-6 my-2">
                        <label for="name"><i class="fa fa-user" aria-hidden="true"></i> Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Name" required>
                    </div>

                    <!--gender-->
                    <div class="col-lg-6 my-2">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="radios" id="radio1" value="male" checked>
                            <label class="form-check-label" for="exampleRadios1">
                                <i class="fa fa-mars" aria-hidden="true"></i> Male
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="radios" id="radio2" value="female">
                            <label class="form-check-label" for="exampleRadios2">
                                <i class="fa fa-venus" aria-hidden="true"></i> Female
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="radios" id="radio3" value="noAnswer">
                            <label class="form-check-label" for="exampleRadios3">
                                Prefer not to answer
                            </label>
                        </div>
                    </div>

                </div>

                <!--image-->
                <div class="form-group my-2">
                    <label for="image"><i class="fa fa-picture-o" aria-hidden="true"></i> Link to Photo</label>
                    <input type="text" class="form-control" id="image" placeholder="http://image.com" required>
                </div>

                <!--email-->
                <div class="form-group my-2">
                    <label for="email"><i class="fa fa-envelope" aria-hidden="true"></i> Email address</label>
                    <input type="email" class="form-control" id="email" placeholder="name@gmail.com" required>
                </div>

                <!--location city, state-->
                <div class="form-row">
                    <div class="col-md-8 mb-3 my-2">
                        <label for="city"><i class="fa fa-map-marker" aria-hidden="true"></i> City</label>
                        <input type="text" class="form-control" id="city" placeholder="City" required>
                    </div>
                    <div class="col-md-4 mb-3 my-2">
                        <label for="state">State</label>
                        <select id="stateSearch" class="custom-select" required>
                            <option selected disabled>Choose State</option>
                            <option value="AL">AL</option>
                            <option value="AK">AK</option>
                            <option value="AZ">AZ</option>
                            <option value="AR">AR</option>
                            <option value="CA">CA</option>
                            <option value="CO">CO</option>
                            <option value="CT">CT</option>
                            <option value="DE">DE</option>
                            <option value="FL">FL</option>
                            <option value="GA">GA</option>
                            <option value="HI">HI</option>
                            <option value="ID">ID</option>
                            <option value="IL">IL</option>
                            <option value="IN">IN</option>
                            <option value="IA">IA</option>
                            <option value="KS">KS</option>
                            <option value="LA">LA</option>
                            <option value="ME">ME</option>
                            <option value="MD">MD</option>
                            <option value="MA">MA</option>
                            <option value="MI">MI</option>
                            <option value="MN">MN</option>
                            <option value="MS">MS</option>
                            <option value="MO">MO</option>
                            <option value="MT">MT</option>
                            <option value="NE">NE</option>
                            <option value="NV">NV</option>
                            <option value="NH">NH</option>
                            <option value="NJ">NJ</option>
                            <option value="NM">NM</option>
                            <option value="NY">NY</option>
                            <option value="NC">NC</option>
                            <option value="ND">ND</option>
                            <option value="OH">OH</option>
                            <option value="OK">OK</option>
                            <option value="OR">OR</option>
                            <option value="PA">PA</option>
                            <option value="RI">RI</option>
                            <option value="SC">SC</option>
                            <option value="SD">SD</option>
                            <option value="TN">TN</option>
                            <option value="TX">TX</option>
                            <option value="UT">UT</option>
                            <option value="VT">VT</option>
                            <option value="VA">VA</option>
                            <option value="WA">WA</option>
                            <option value="WV">WV</option>
                            <option value="WI">WI</option>
                            <option value="WY">WY</option>
                        </select>
                    </div>
                </div>

                <!--Craft-->
                <div class="form-group my-2">
                    <label for="craft"><i class="fa fa-paint-brush" aria-hidden="true"></i> Crafts</label>
                    <textarea class="form-control" id="craft" rows="2" required></textarea>
                </div>

                <!--availability-->
                <div class="form-group my-2">
                    <label for="availability"><i class="fa fa-calendar" aria-hidden="true"></i> Availability</label>
                    <textarea class="form-control" id="availability" rows="1"></textarea>
                </div>

                <!--Brief description-->
                <div class="form-group my-2">
                    <label for="description"><i class="fa fa-id-card-o" aria-hidden="true"></i> Brief description of
                        yourself</label>
                    <textarea class="form-control" id="description" rows="5"></textarea>
                </div>

                <button class="btn btn-outline-light form_submit" id="submit" type="submit">Submit form</button>
                
            </form>

            <!--modal-->
            <div id="myModal" class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title text-success text-center" id="exampleModalLabel">
                                You have successfully submitted your form!
                            </h5>
                            <!--button to close modal-->
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

